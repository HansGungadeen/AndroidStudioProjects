<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f7f7f7"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="325dp"
        android:layout_height="135dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logosmall" />

    <TextView
        android:id="@+id/texthello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="65dp"
        android:fontFamily="monospace"
        android:text="Hello!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Make wise choices when it comes to booking, paying, and parking"
        android:layout_below="@id/texthello"
        android:textColor="#C33B4B53"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:background="@drawable/button_custom"
        android:text="@string/Login"
        android:textSize="15dp"
        android:fontFamily="monospace"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_above="@id/button2"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button_custom2"
        android:text="@string/Register"
        android:textSize="15dp"
        android:fontFamily="monospace"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:text="Powered By"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/imageView3"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="133dp"
        android:layout_height="36dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/pmllogo" />


</RelativeLayout>